extends ./layout.pug

block content
	include ./partials/_header.pug
	include ./partials/_tweetarea.pug
	
	.bounds.app--body
		if timeline[0].user.profile_banner_url
			.app--section--header(style='top: 80px')
				.grid-33
					.app--section--heading
						h2 Timeline
				.grid-33
					.app--section--heading
						strong #{timeline[0].user.friends_count}
						h2 Following
				.grid-33
					.app--section--heading
						h2 Direct Messages
		else
			.app--section--header
				.grid-33
					.app--section--heading
						h2 Timeline
				.grid-33
					.app--section--heading
						strong #{timeline[0].user.friends_count}
						h2 Following
				.grid-33
					.app--section--heading
						h2 Direct Messages
		include ./partials/_timeline.pug
		include ./partials/_friends.pug
		include ./partials/_messages.pug